<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardViewSale"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#ffffff"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/menuButtonBackgroundColor"
        >

        <ImageView
            android:id="@+id/salePhoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/saleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/salePhoto"
            android:textColor="@color/menuButtonTextColor"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/saleDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/saleName"
            android:layout_toLeftOf="@+id/salePhoto"
            android:textColor="@color/menuButtonTextColor"
            android:textSize="14sp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>